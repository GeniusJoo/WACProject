<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.WAC.Mapper.LoginMapper">
	<select id="getLoginInfo" parameterType="com.WAC.Model.LoginDto" resultType="com.WAC.Model.LoginDto">
		SELECT 
			*
		FROM 
			user
		WHERE
			ID = #{id}
		AND 
			PASSWORD = #{password}
	</select>
	
	<select id="Info" parameterType="com.WAC.Model.LoginDto" resultType="com.WAC.Model.LoginDto">
		SELECT 
			*
		FROM 
			user
		WHERE
			id = #{id}

	</select>
	
	<update id="getUpdateInfo"
		parameterType="com.WAC.Model.LoginDto">
		UPDATE user
		name = #{name},
		nickname = #{nickname},
		password = #{password},
		email = #{email)
		WHERE id = #{id}
	</update>
</mapper>